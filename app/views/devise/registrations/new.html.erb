<style type="text/css">
  body {
    padding-top: 40px;
    padding-bottom: 40px;
    background-color: #f5f5f5;
  }

  .new_user {
    max-width: 300px;
    padding: 19px 29px 29px;
    margin: 0 auto 20px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
       -moz-border-radius: 5px;
            border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
       -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }
  .form-signin .form-signin-heading,
  .form-signin .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signin input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
  }
</style>

<div class="container">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

		<h2 class="form-signin-heading">Please sign up</h2>
	  
	  <%= f.email_field :email, :placeholder => "Email address", :class => "input-block-level" %>
	  <%= f.password_field :password, :placeholder => "Password", :class => "input-block-level" %>
	  <%= f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "input-block-level" %>
	  <%= f.submit "Sign up", :class => "btn btn-large btn-primary" %>
	  <br /><br />
	  <%= render :partial => "devise/shared/links" %>
	<% end %>
</div>